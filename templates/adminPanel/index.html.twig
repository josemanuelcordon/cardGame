{% extends 'base.html.twig' %}

{% block title %}Card Game{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
            <h1>Hola Administrador</h1>
            <h2>Más ha jugado</h2>
            <p><strong>{{ more_played.username }}</strong></p>
            <h2>Más ha ganado</h2>
            <p><strong>{{ best_user.username }}</strong></p>
            <h2>Todos los jugadores</h2>
            {% for user in users %}
                <div>
                <h3>{{ user.username }}</h3>
                <p>PartidasJugadas: {{ user.getTotalGames()}}</p>
                <p>PartidasGanadas: {{ user.gamesWon}}
                </div>
            {% endfor %}
    {% endif %}
{% endblock %}
